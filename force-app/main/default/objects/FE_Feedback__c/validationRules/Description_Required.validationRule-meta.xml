<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Description_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(Description__c), ISPICKVAL(Feedback_Type__c, &apos;Bug Report&apos;))</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Description is mandatory for bug reports.</errorMessage>
</ValidationRule>
